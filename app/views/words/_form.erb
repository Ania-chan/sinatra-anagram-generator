<form action="<%= words_form_action(@word) %>" method="post">
    <input type="hidden" name="_method" value="<%= words_form_method(@word) %>" />
    <div class="form-group">
      <label for="word"> Word:</label>
      <input class="form-control" type="text" name="word" value="<%= @word.text %>" />
    </div>
    <div class="form-button form-group btn col-md-12">
      <input type="submit" />
    </div>
</form>
